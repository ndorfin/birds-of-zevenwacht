{% extends layout %}
{% set page_name = person.username %}
{% set page_description = 'A contributor to Birds of Zevenwacht' %}

{% block content %}
<dl>
	<div>
		<dt>id</dt>
		<dd>{{ person.id }}</dd>
	</div>
	<div>
		<dt>username</dt>
		<dd>{{ person.username }}</dd>
	</div>
	<div>
		<dt>email</dt>
		<dd>{{ person.email }}</dd>
	</div>
	<div>
		<dt>first_name</dt>
		<dd>{{ person.first_name }}</dd>
	</div>
	<div>
		<dt>last_name</dt>
		<dd>{{ person.last_name }}</dd>
	</div>
</dl>
{% endblock %}
