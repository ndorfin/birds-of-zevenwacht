{% extends layout %}
{% set page_name = bird.common_name %}
{% set page_description = 'More details about this bird' %}

{% block content %}
<div>
		<dt>id</dt>
		<dd>{{ bird.id }}</dd>
	</div>
	<div>
		<dt>common_name</dt>
		<dd>{{ bird.common_name }}</dd>
	</div>
	<div>
		<dt>family</dt>
		<dd>{{ bird.family }}</dd>
	</div>
	<div>
		<dt>genus, species</dt>
		<dd>{{ bird.genus }} {{ bird.species }}</dd>
	</div>
	<div>
		<dt>redlist_level</dt>
		<dd>{{ bird.redlist_level }}</dd>
	</div>
	<div>
		<dt>afrikaans_name</dt>
		<dd>{{ bird.afrikaans_name }}</dd>
	</div>
	<div>
		<dt>german_name</dt>
		<dd>{{ bird.german_name }}</dd>
	</div>
	<div>
		<dt>ebird</dt>
		<dd>{{ bird.ebird }}</dd>
	</div>
	<div>
		<dt>wikipedia</dt>
		<dd>{{ bird.wikipedia }}</dd>
	</div>
	<div>
		<dt>memberships</dt>
		<dd>
			{% if memberships %}
				<ul>
					{% for membership in memberships %}
						<li>
							<a href="{{ url('species_list_detail', membership.id) }}">{{ membership }}</a>
						</li>
					{% endfor %}
				</ul>
			{% else %}
				None
			{% endif %}
		</dd>
	</div>
</dl>
{% endblock %}
