{% extends "layouts/wizard.jinja" %}
{% set page_name = 'Add an entry' %}
{% set page_description = 'Contribute to Birds of Zevenwacht by adding your own Photo and/or Sighting' %}

{% block step_content %}
	<form method="POST" action="." enctype="multipart/form-data">
		{% csrf_token %}
		<div class="form_row">
			<label for="fil_photo">Upload a photo:</label>
			<div class="form_field">
				<input
					type="file"
					id="fil_photo"
					{# {% if form.source_photo.errors %}
						aria-describedby="photo_error_messages"
					{% endif %} #}
					required>
				{# {% if form.source_photo.errors %}
					<div id="photo_error_messages" class="form_field_errors">
						{{ form.source_photo.errors }}
					</div>
				{% endif %} #}
			</div>
		</div>
		<div class="form_row">
			<button type="submit">Next</button>
			or <a href="{{ url('wizard_edit_location') }}">Skip</a>
		</div>
	</form>
{% endblock %}
