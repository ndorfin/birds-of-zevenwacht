{% extends "layouts/wizard.jinja" %}
{% set page_name = 'Add an entry' %}
{% set page_description = 'Contribute to Birds of Zevenwacht by adding your own Photo and/or Sighting' %}

{% block step_content %}
	<form id="wizard_form" method="POST" action="" enctype="multipart/form-data">
		{% csrf_token %}
		{{ wizard.management_form }}
		<div class="form_row">
			<label for="{{ wizard.form.source_photo.id_for_label }}">Upload a photo (Optional)</label>
			<div class="form_field">
				<input
					type="file"
					id="{{ wizard.form.source_photo.auto_id }}"
					name="{{ wizard.form.source_photo.html_name }}"
					{% if wizard.form.source_photo.errors %}
						aria-describedby="{{ wizard.form.source_photo.auto_id }}_errors"
					{% elif wizard.form.source_photo.help_text %}
						aria-describedby="{{ wizard.form.source_photo.auto_id }}_helptext"
					{% endif %}
					>
				{% if wizard.form.source_photo.help_text %}
					<div id="{{ wizard.form.source_photo.auto_id }}_helptext" class="form_field_help">
						{{ wizard.form.source_photo.help_text }}
					</div>
				{% endif %}
				{% if wizard.form.source_photo.errors %}
					<div id="{{ wizard.form.source_photo.auto_id }}_errors" class="form_field_errors">
						{{ wizard.form.source_photo.errors }}
					</div>
				{% endif %}
			</div>
		</div>
		<div class="form_row">
			<button type="submit">Next</button>
		</div>
	</form>
{% endblock %}
