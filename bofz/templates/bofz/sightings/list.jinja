{% extends layout %}
{% set page_name = 'Sightings' %}
{% set page_description = 'A list of recently-recorded sightings' %}

{% block toolbar %}
	{% if user.is_authenticated %}
		<p><a href="{{ url('sighting_add') }}" class="button">Add a sighting</a></p>
	{% endif %}
{% endblock %}

{% block content %}
	{% if sightings %}
		<nav>
			<ul>
				{% for sighting in sightings %}
					<li>
						<a href="{{ url('sighting_detail', pk=sighting.id) }}">
							{{ sighting.datetime }}: {{ sighting.bird }} x {{ sighting.quantity }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</nav>
	{% else %}
		<p class="no_items">No sightings recorded yet</p>
	{% endif %}
{% endblock %}
